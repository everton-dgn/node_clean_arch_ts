{
  "name": "node_clean_arch_ts",
  "version": "1.0.0",
  "description": "Node.js API with Clean Architecture and Typescript",
  "repository": "git@github.com:everton-dgn/node_clean_arch_ts.git",
  "keywords": [
    "node",
    "node.js",
    "clean architecture",
    "typescript",
    "api"
  ],
  "author": "Ã‰verton Toffanetto <evertondgn@hotmail.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build --clean && tsc",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/index.ts",
    "start": "node dist/src/index.js",
    "lint": "eslint src tests --ext ts --max-warnings=0",
    "lint:fix": "eslint src tests --ext ts --fix",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --runInBand --passWithNoTests --no-cache",
    "test:watch": "jest --watch --runInBand --passWithNoTests",
    "test:unit": "jest --projects ./tests/config/jest-unit-config.js --runInBand --passWithNoTests --no-cache",
    "test:integration": "jest --projects ./tests/config/jest-integration-config.js --runInBand --passWithNoTests --no-cache",
    "check-update": "yarn upgrade-interactive --latest",
    "prepare": "husky install && chmod ug+x .husky/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "mongodb": "3.5.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.3.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@shelf/jest-mongodb": "1.1.3",
    "@types/mongodb": "3.3.14",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.1",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.5",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^3.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
